<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NDRS"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        android:background="#7600bc"
        android:gravity="center"/>

    <!-- Search Fields Section -->
    <EditText
        android:id="@+id/searchType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Incident Type (e.g., Flood)"
        android:inputType="text" />

    <EditText
        android:id="@+id/searchLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Location (e.g., City A)"
        android:inputType="text" />

    <EditText
        android:id="@+id/searchSeverity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Severity (e.g., High)"
        android:inputType="text" />

    <Button
        android:id="@+id/searchButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Search Guidelines"
        android:layout_marginTop="8dp" />

    <!-- RecyclerView for displaying guidelines -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/guidelinesRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="16dp"
        android:divider="?android:attr/listDivider"
        android:dividerHeight="1dp" />
</LinearLayout>
