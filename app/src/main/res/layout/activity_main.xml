<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="1dp">

            <!-- Header Bar with Title -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#3E50B4"
                android:padding="6dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="National Disaster Response System\n\nGet Shelter Information"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:layout_marginStart="16dp"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="16dp"/>

            <!-- Shelter Information Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/orderIcon"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:src="@drawable/ndrsres"
                    android:contentDescription="Shelter Information Icon"
                    android:layout_marginBottom="5dp"/>

                <Button
                    android:id="@+id/btnViewItems"
                    android:layout_width="330dp"
                    android:layout_height="wrap_content"
                    android:text="Shelter Center Information Details"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:backgroundTint="#FF5722"
                    android:textColor="@android:color/white"
                    android:padding="16dp"
                    android:elevation="8dp"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="269dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:background="#009688"
                    android:gravity="center"
                    android:padding="16dp"
                    android:text="Please login if you are admin person"
                    android:textColor="@android:color/white"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="bottom"
                android:layout_marginTop="22dp">

                <EditText
                    android:id="@+id/etEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Admin Email"
                    android:padding="12dp"
                    android:backgroundTint="#3E50B4"
                    android:inputType="textEmailAddress"/>

                <EditText
                    android:id="@+id/etPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Password"
                    android:padding="12dp"
                    android:backgroundTint="#3E50B4"
                    android:inputType="textPassword"/>

                <Button
                    android:id="@+id/btnLogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Login"
                    android:textStyle="bold"
                    android:backgroundTint="#3E50B4"
                    android:textColor="@android:color/white"
                    android:padding="12dp"
                    android:elevation="4dp"
                    android:layout_marginTop="16dp"/>
            </LinearLayout>

            <!-- Footer with University Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="64dp"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="12dp"
                    android:gravity="center"
                    android:text="Â© 2024 Jahangirnagar University"
                    android:textColor="#888888"
                    android:textSize="16sp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>